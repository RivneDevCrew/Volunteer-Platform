@model IEnumerable<VolunteerSystem.Models.Car>

@{
    ViewBag.Title = "Index";
}

<h2>Ваші транспортні засоби</h2>

<p>
    @Html.ActionLink("Додати новий", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Plate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CargoMaxWeight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModelDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Plate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CargoMaxWeight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModelDescription)
        </td>
        <td>
            @Html.ActionLink("Редагувати", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Видалити", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
